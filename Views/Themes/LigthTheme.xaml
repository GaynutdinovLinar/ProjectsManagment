<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BlueColor">#59afff</Color>
    <SolidColorBrush x:Key = "BlueBrush"  Color = "{DynamicResource BlueColor}"/>

    <Color x:Key="LightBlueColor">#85c4ff</Color>
    <SolidColorBrush x:Key = "LightBlueBrush"  Color = "{DynamicResource LightBlueColor}"/>

    <Color x:Key="MainBackgroundColor">#f7f7f7</Color>
    <SolidColorBrush x:Key = "MainBackgroundBrush"  Color = "{DynamicResource MainBackgroundColor}"/>

    <Color x:Key="SecondaryBackgroundColor">#f2f2f2</Color>
    <SolidColorBrush x:Key = "SecondaryBackgroundBrush"  Color = "{DynamicResource SecondaryBackgroundColor}"/>

    <Color x:Key="MainTextColor">#141414</Color>
    <SolidColorBrush x:Key = "MainTextBrush"  Color = "{DynamicResource MainTextColor}"/>

    <Color x:Key="SecondaryTextColor">#383838</Color>
    <SolidColorBrush x:Key = "SecondaryTextBrush"  Color = "{DynamicResource SecondaryTextColor}"/>

    <Color x:Key="LightGrayColor">#d6d6d6</Color>
    <SolidColorBrush x:Key = "LightGrayBrush"  Color = "{DynamicResource LightGrayColor}"/>

</ResourceDictionary>