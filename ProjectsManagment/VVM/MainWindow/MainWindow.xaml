<Window x:Class="ProjectsManagment.VVM.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        DataContext="{Binding MainWindowVM, Source={StaticResource IoC}}"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Command="{Binding OpenPage}" Height="30"/>
            <Button Grid.Column="1" Command="{Binding ClosePage}" Height="30"/>
        </Grid>
        <Frame DataContext="{Binding MainWindowMainFrame, Source={StaticResource IoC}}" NavigationUIVisibility="Hidden"
               Content="{Binding CurrentPage}"/>
    </DockPanel>
</Window>
